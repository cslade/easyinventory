<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/tvProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceTitleMedium"
        android:textStyle="bold"
        tools:text="Product Name" />

    <TextView
        android:id="@+id/tvCurrentStock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        tools:text="Current Stock: 0" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        tools:text="Price: $0.00" />

    <!-- Shown after a successful stock update -->
    <TextView
        android:id="@+id/tvStockUpdatedMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textColor="?attr/colorPrimary"
        android:textAppearance="?attr/textAppearanceBodySmall"
        android:visibility="gone"
        tools:text="Stock Updated!" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnUpdateStock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/action_update_stock"
        style="@style/Widget.Material3.Button.IconButton.Filled" />

</LinearLayout>
