<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootPicker"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        style="@style/TextAppearance.Material3.TitleLarge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/provider_picker_subtitle"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- EPOS Now -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnProviderEpos"
        style="@style/Widget.Material3.Button.IconButton.Filled"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="EPOS Now"
        android:layout_marginTop="24dp"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Shopify -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnProviderShopify"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Shopify"
        android:layout_marginTop="12dp"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnProviderEpos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Clover (optional; hide if not ready) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnProviderClover"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Clover"
        android:layout_marginTop="12dp"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnProviderShopify"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
