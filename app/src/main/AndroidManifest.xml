<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kinvo.easyinventory">

    <!-- ✅ Internet permission for API calls -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Kinvo Easy Inventory"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Material3.DynamicColors.DayNight.NoActionBar">


        <!-- ✅ Splash Screen (First screen user sees) -->
        <activity android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ✅ Login Screen -->
        <activity android:name=".LoginActivity" />

        <!-- ✅ Product Search Screen -->
        <activity android:name=".ProductSearchActivity"
            android:theme="@style/Theme.Material3.DynamicColors.DayNight.NoActionBar"/>
        <activity android:name=".UserAgreementActivity"
            android:theme="@style/Theme.Material3.DynamicColors.DayNight.NoActionBar"/>
        <activity android:name=".PrivacyPolicyActivity" />

        <!-- ✅ Main Activity -->
        <activity android:name=".MainActivity" />



        <!-- ✅ Other Activities (If Any) -->
        <activity android:name=".SomeOtherActivity" />

    </application>

</manifest>
