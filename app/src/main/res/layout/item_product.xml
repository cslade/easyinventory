<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- ✅ Product Name -->
        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <!-- ✅ Current Stock -->
        <TextView
            android:id="@+id/tvCurrentStock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stock: 0"
            android:textSize="16sp"
            android:textColor="@color/black"/>


        <!-- ✅ Update Stock Button -->
        <Button
            android:id="@+id/btnUpdateStock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Stock"
            android:background="@drawable/button_background"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"/>

        <!-- Change android:visibility="gone" to "visible" to check -->
        <TextView
            android:id="@+id/tvStockUpdatedMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stock Updated!"
            android:textSize="14sp"
            android:textColor="@color/green"
            android:visibility="visible"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>

